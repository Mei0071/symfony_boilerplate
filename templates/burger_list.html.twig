{% extends 'base.html.twig' %}

{% block title %}Nos burgers{% endblock %}

{%block content %}

    <main>
        <h2>Liste des burgers</h2>
        <p>Nos burgers sont préparés avec soin et passion.</p>

          <ul>
            {% for id, burger in burgers %}
                <li>
                    <a href="{{ path('burger_show', { id: burger.id }) }}">
                        {{ burger.name }}
                    </a>
                </li>
            {% else %}
                <li>Aucun burger trouvé.</li>
            {% endfor %}
        </ul>
    </main>
 
{% endblock %}


